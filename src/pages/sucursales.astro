---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Email from '../assets/email.png';
import Telephone from '../assets/telephone.png';
import SMS from '../assets/sms.png';
import { Image } from 'astro:assets';
import Whatsapp from '../assets/whatsapp.png'
---

<Layout>
    <main>
        <Navbar />
        <section class="bg-[url(../assets/ofice.avif)] bg-center bg-cover px-20 py-48 flex flex-col text-white items-center justify-center">
			<h1 class="text-5xl font-extrabold mt-10">Nuestra unica sucursal</h1>
			<a href="/contacto" class="bg-blue-500 mt-10 hover:border-2 hover:border-blue-500 hover:text-white hover:bg-transparent px-20 py-3 text-white font-bold rounded-lg">COTIZA AQUI</a>
		</section>
		<section class="bg-black w-full flex items-center py-10 px-20 text-white">
			<div class="w-1/3 flex items-center justify-center">
				<Image src={Email} alt="Email logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Cotiza via e-mail</h1>
					<p>fernandovazquez.favm@gmail.com</p>
				</div>
			</div>
			<div class="w-1/3 flex items-center justify-center">
				<Image src={Telephone} alt="Telephone logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Llamanos</h1>
					<p>+52 (844) 437 1227</p>
				</div>
			</div>
			<div class="w-1/3 flex items-center justify-center">
				<Image src={SMS} alt="Horario logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Horario</h1>
					<p>L - S: 9 am - 6 pm</p>
				</div>
			</div>
		</section>
        <section class="w-full flex px-20 py-10">
            <div class="w-1/2 px-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14412.712372224403!2d-100.944402842011!3d25.43230880473859!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86880d7af72f5691%3A0xd69d2b1019034501!2sLindero%20del%20Sendero%2023%2C%20San%20Jos%C3%A9%20de%20los%20Cerritos%2C%2025294%20Saltillo%2C%20Coah.!5e0!3m2!1sen!2smx!4v1744868598207!5m2!1sen!2smx" width="500" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="w-1/2 flex flex-col my-auto px-5">
                <h1 class="text-2xl font-extrabold">Saltillo, Coahuila</h1>
                <h1 class="font-bold">Entre calles.</h1>
                <div>
                    <ul>
                        <li> - Camino Real</li>
                        <li> - Blvd. Fundadores</li>
                    </ul>
                </div>
                <div class="flex w-full items-center">
                    <Image class="w-10 mr-3" src={Whatsapp} alt="Whatsapp logo" />
                    <h1><span class="font-bold">Llamanos: </span>+52 (844) 437 1227</h1>
                </div>
            </div>
        </section>
        <Footer />
    </main>
</Layout>
