---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Email from '../assets/email.png';
import Telephone from '../assets/telephone.png';
import SMS from '../assets/sms.png';
import { Image } from 'astro:assets';
---

<Layout>
	<main>
		<Navbar />
		<section class="bg-[url(../assets/hero.jpg)] bg-center bg-cover px-20 py-48 flex flex-col text-white items-center justify-center">
			<h1 class="text-5xl font-extrabold">Automatizaciones con IA</h1>
			<h1 class="py-3 text-xl">n8n | make</h1>
			<a href="/cotizar" class="bg-blue-500 hover:border-2 hover:border-blue-500 hover:text-white hover:bg-transparent px-10 py-2 text-black font-bold rounded-lg">COTIZA AQUI</a>
		</section>
		<section class="bg-black w-full flex items-center py-10 px-20 text-white">
			<div class="w-1/3 flex items-center justify-center">
				<Image src={Email} alt="Email logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Cotiza via e-mail</h1>
					<p>fernandovazquez.favm@gmail.com</p>
				</div>
			</div>
			<div class="w-1/3 flex items-center justify-center">
				<Image src={Telephone} alt="Telephone logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Llamanos</h1>
					<p>+52 (844) 4371 227</p>
				</div>
			</div>
			<div class="w-1/3 flex items-center justify-center">
				<Image src={SMS} alt="Horario logo" />
				<div class="pl-5">
					<h1 class="font-bold text-lg">Horario</h1>
					<p>L - S: 9 am - 6 pm</p>
				</div>
			</div>
		</section>
	</main>
</Layout>
