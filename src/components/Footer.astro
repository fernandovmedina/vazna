---
import Facebook from "../assets/facebook.png";
import Instagram from "../assets/instagram.png";
import Gmail from "../assets/gmail.png";
import Whatsapp from "../assets/whatsapp.png";
import X from "../assets/x_white.png";
import LinkedIn from "../assets/linkedin.png";
import { Image } from "astro:assets";
---

<footer class="bg-black text-white w-full flex px-20 py-10">
  <div class="w-1/3 flex">
    <img
      class="w-36 h-36"
      src="/vazna_no_background.png"
      alt="Logo Vazna S.A de C.V"
    />
    <div class="my-auto">
      <h1 class="font-bold text-xl">Vazna S.A de C.V</h1>
      <h1 class="font-light">Servicios y comercializadora</h1>
    </div>
  </div>
  <div class="w-1/3">
    <h1 class="font-bold text-xl">Enlaces</h1>
    <div class="flex flex-col">
      <a class="underline hover:underline-offset-0" href="/">Inicio</a>
      <a class="underline hover:underline-offset-0" href="/servicios">Servicios</a>
      <a class="underline hover:underline-offset-0" href="/sucursales">Sucursales</a>
      <a class="underline hover:underline-offset-0" href="/contacto">Contactanos</a>
    </div>
  </div>
  <div class="w-1/3">
    <h1 class="font-bold text-xl mb-3">Contacto</h1>
    <div class="flex">
      <Image class="w-10" src={Facebook} alt="socials link" />
      <Image class="w-10" src={Instagram} alt="socials link" />
      <Image class="w-10" src={Whatsapp} alt="socials link" />
      <Image class="w-10" src={X} alt="socials link" />
      <Image class="w-10" src={Gmail} alt="socials link" />
      <Image class="w-10" src={LinkedIn} alt="socials link" />
    </div>
  </div>
</footer>
